{% extends 'base.html.twig' %}

{% block title %}Availability{% endblock %}

{% block content %}
    <h1>Availability</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ availability.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ availability.date ? availability.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>HeureDebut</th>
                <td>{{ availability.heureDebut ? availability.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HeureFin</th>
                <td>{{ availability.heureFin ? availability.heureFin|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_availability_index') }}">back to list</a>

    <a href="{{ path('app_availability_edit', {'id': availability.id}) }}">edit</a>

    {{ include('availability/_delete_form.html.twig') }}
{% endblock %}
