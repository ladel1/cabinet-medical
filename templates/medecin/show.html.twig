{% extends 'base.html.twig' %}

{% block title %}Medecin{% endblock %}

{% block content %}
<div class="row mt-5">
    <div class="col-6 offset-3">

        <h1>Medecin</h1>
    
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ medecin.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ medecin.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ medecin.prenom }}</td>
                </tr>
                <tr>
                    <th>Age</th>
                    <td>{{ medecin.age }}</td>
                </tr>
                <tr>
                    <th>Civilite</th>
                    <td>{{ medecin.civilite }}</td>
                </tr>
                <tr>
                    <th>Specialite</th>
                    <td>{{ medecin.specialite }}</td>
                </tr>
                <tr>
                    <th>Tel</th>
                    <td>{{ medecin.tel }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ medecin.adresse }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ medecin.email }}</td>
                </tr>
            </tbody>
        </table>
    
        {{ include('medecin/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
