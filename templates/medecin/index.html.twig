{% extends 'base.html.twig' %}

{% block title %}Liste des medecins{% endblock %}

{% block content %}
<div class="row mt-5">
    <div class="col-8 offset-2">
        <h1>Liste des medecins</h1>
        <table class="table table-primary mt-5">
            <thead>
                <tr>
                    <th>NÂ°</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Age</th>
                    <th>Civilite</th>
                    <th>Specialite</th>
                    <th>Tel</th>
                    <th>Adresse</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for medecin in medecins %}
                <tr>
                    <td>{{ medecin.id }}</td>
                    <td>{{ medecin.nom }}</td>
                    <td>{{ medecin.prenom }}</td>
                    <td>{{ medecin.age }}</td>
                    <td>{{ medecin.civilite }}</td>
                    <td>{{ medecin.specialite }}</td>
                    <td>{{ medecin.tel }}</td>
                    <td>{{ medecin.adresse }}</td>
                    <td>{{ medecin.email }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_medecin_show', {'id': medecin.id}) }}"><i class="fa-solid fa-eye"></i></a>
                        <a class="btn btn-success" href="{{ path('app_medecin_edit', {'id': medecin.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
