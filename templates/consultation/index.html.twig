{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block content %}
    <h1>Consultation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Diagnostic</th>
                <th>Description</th>
                <th>Ordonnance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.id }}</td>
                <td>{{ consultation.diagnostic }}</td>
                <td>{{ consultation.description }}</td>
                <td>{{ consultation.ordonnance }}</td>
                <td>
                    <a href="{{ path('app_consultation_show', {'id': consultation.id}) }}">show</a>
                    {% if is_granted("ROLE_MEDECIN") %}
                        <a href="{{ path('app_consultation_edit', {'id': consultation.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
