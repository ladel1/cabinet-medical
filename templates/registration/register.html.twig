{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <div class="row text-center mt-5">
        <h1>Inscription</h1>
    </div>
    <div class="row mt-5">
        <div class="col-6 offset-3">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.role) }}
                {{ form_row(registrationForm.specialite) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                
                <button type="submit" class="btn btn-primary">Inscription</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}


{% block javascriptsbody %}
    <script>
        jQuery(document).ready(function($){
 
            $("#registration_form_role").change(function(){
          
                if($(this).val()==="ROLE_MEDECIN"){
                    $("[name=registration_form] .row:nth-child(4)").show(500);
                }else{
                    $("[name=registration_form] .row:nth-child(4)").hide(500);
                }
            });
        })
    </script>
{% endblock %}
